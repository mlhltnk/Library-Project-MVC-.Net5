@using MvcKutuphane.Models.Entity
@model List<TBLADMIN>

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


<table class="table table-bordered ">

    <tr>
        <td>ID</td>
        <td>Kullanıcı</td>
        <td>Yetki</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.ID</td>
            <td>@item.Kullanici</td>
            <td>@item.Yetki</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Ayarlar/AdminGuncelle/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    DÜZENLE
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@item.ID">
                    <i class="fas fa-trash">
                    </i>
                    SİL
                </a>
            </td>
        </tr>


    }

</table>

<br />


                            @*-----POP-UP MODAL KULLANIMI---*@

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Ayarlar/Yeniadmin/">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="Kullanici" class="form-control"/>
                    <br />
                    <label>Şifre</label>
                    <input type="text" name="Sifre" class="form-control" />
                    <br />
                    <label>Yetki</label>
                    <input type="text" name="Yetki" class="form-control" />
                    <br />

                    <button class="btn btn-info">Kaydet</button>

                </div>
            </form>
        </div>
    </div>
</div>
                                @*-----POP-UP MODAL KULLANIMI---*@