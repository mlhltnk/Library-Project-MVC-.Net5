@model MvcKutuphane.Models.Entity.TBLUYELER


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>



@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
<table class="table table-hover" style="margin-top:50px">
    <tr>
        <td>
            @*giriş yaptırdığımı< panele girşi yaptığımız mail adresini taşayacağım(identity yöntemi ile)*@
            @*.Name ; mail adresine denk geliyor*@
            <label style="font-weight:bolder">Mail Adresi</label>
            @HttpContext.Current.User.Identity.Name
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x=>x.AD)
            @Html.TextBoxFor(z => z.AD, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.SOYAD)
            @Html.TextBoxFor(z => z.SOYAD, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.SIFRE)
            @Html.TextBoxFor(z => z.SIFRE, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.KULLANICIADI)
            @Html.TextBoxFor(z => z.KULLANICIADI, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.FOTOGRAF)
            @Html.TextBoxFor(z => z.FOTOGRAF, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(x => x.OKUL)
            @Html.TextBoxFor(z => z.OKUL, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            <button class="=btn btn-danger">Şifre Güncelle</button>
        </td>
    </tr>

</table>
}