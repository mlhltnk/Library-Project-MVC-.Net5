@using MvcKutuphane.Models.Entity

@model List<TBLYAZAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZARLAR</h2>

<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yazarın Kitapları</th>
    </tr>


    @foreach (var yzr in Model)

    {
        <tr>
            <td>@yzr.ID</td>
            <td>@yzr.AD</td>
            <td>@yzr.SOYAD</td>
            <td>@Html.ActionLink("Sil","YazarSil", new {id=yzr.ID}, new {@class="btn btn-danger", onclick="return confirm('Silmek İstiyor musunuz?')"})</td>
            <td><a href="/Yazar/Yazargetir/@yzr.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-default" style="background-color:palevioletred">Yazarın Kitapları</a></td>


        </tr>
    }

</table>

<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>
