@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kullanıcı Bilgisi: @ViewBag.uyeblgs</h2>


<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üyenin İade Tarihi</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>

            <td>@k.TBLKITAP.AD</td>
            <td>@k.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.UYEGETİRTARİH).ToString("dd/MM/yyyy")</td>


        </tr>
    }
</table>
