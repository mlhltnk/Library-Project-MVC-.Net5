@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";  //model içerisinde renk adında bir değişken tanımladım. başlangıç değerini "" ile gönderdim
}


@*alttaki script dosyaları kategorileri renklendirme işlemi için w3schoolstan alındı*@ 

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>


<h2>DUYURULAR</h2>

<table class="table table-bordered">
    <tr>
        <th>Duyuru No</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>İçerik</th>
    </tr>

    @foreach (var prs in Model)
    {
        if (prs.KATEGORI == "Diger")                   //kategorilere backgroud verme işlemi
        {
            renk = "bg-info text-white";
        }

        if (prs.KATEGORI == "Iletisim")            //kategorilere backgroud verme işlemi

        {
            renk = "bg-warning text-white";         //kategorilere backgroud verme işlemi 
        }

        if (prs.KATEGORI == "KitaplarıGeciktirme")
        {
            renk = "bg-danger text-white";
        }

        <tr class="@renk">
            <td>@prs.ID</td>
            <td>@prs.KATEGORI</td>
            <td>@Convert.ToDateTime(prs.TARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Duyuru/DuyuruSil/@prs.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Duyuru/DuyuruDetay/@prs.ID" style="background-color:skyblue" class="btn btn-success">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>
